{
  "private": true,
  "name": "splitimize-fullstack",
  "version": "1.0.0",
  "workspaces": [
    "frontend-nextjs",
    "backend-express",
    "shared"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend-nextjs",
    "dev:backend": "npm run dev --workspace=backend-express",
    "dev:shared": "npm run build --workspace=shared -- --watch",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:shared": "npm run build --workspace=shared",
    "build:frontend": "npm run build:shared && npm run build --workspace=frontend-nextjs",
    "build:backend": "npm run build:shared && cd backend-express && npx prisma generate && npm run build --workspace=backend-express"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
