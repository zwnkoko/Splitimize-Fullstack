# Database
DATABASE_URL="postgresql://user:password@localhost:5432/splitimize"

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend Configuration (for CORS and OAuth redirect)
FRONTEND_URL="http://localhost:3000"

# Better Auth (session/auth server)
BETTER_AUTH_SECRET="replace_me_with_strong_secret"
BETTER_AUTH_URL="http://localhost:3001"

# Google OAuth Configuration
# Get these from: https://console.cloud.google.com
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# GitHub OAuth Configuration (Optional)
# Get these from: https://github.com/settings/developers
GITHUB_CLIENT_ID="your_github_client_id_here"
GITHUB_CLIENT_SECRET="your_github_client_secret_here"

# Gemini (Google Generative AI) for post-OCR parsing
GEMINI_API_KEY="your_gemini_api_key_here"

# OCR.space API key (image-to-text OCR)
OCR_SPACE_API_KEY="your_ocr_space_api_key_here"
